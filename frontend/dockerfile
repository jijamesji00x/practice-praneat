# Use an official Node.js runtime as the base image
FROM node:14

# Set the working directory in the container
WORKDIR /app

# Copy package.json and package-lock.json to the working directory
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the entire frontend directory to the working directory
COPY . .

# Build the frontend application (replace 'build' with your build command if different)
RUN npm run build

# Expose the port that the frontend will run on (assuming it's running on port 3000)
EXPOSE 3000

# Start the frontend server (replace 'start' with your server start command if different)
CMD ["npm", "start"]
